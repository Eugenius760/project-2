{{> nav }}
<div class="container index-sect background-base shadow p-3 mb-5 rounded col-md-10">
  <div class="row justify-content-center">
    <div class="row card about-card-sect d-flex algin-content-start flex-wrap col-md-8">
      <div class="card-body about-body d-flex algin-content-start flex-wrap">
        <div><p>This is where we'll explain the app</p></div>
        <div><a href="/addbusiness">Add A Business</a></div>
      </div>
    </div>
  </div>
</div>
<div class="container search background-base shadow p-3 mb-5 rounded col-md-10">
  <div class="alert" role="alert">
    <div class="row sPhrase">
      <div>
        Don't Just Talk About It, Be About It! Support Black Owned Business!
      </div>
    </div>
    <div class="row search-card">
      <div class="card search-card-c d-flex algin-content-start flex-wrap col-md-10">
        <div class="row">
          <div class="form-group col-md-6">
            <label for="business-form" class="search-words">What type of business are you looking for?</label>
            <select class="form-control" id="bus-type" placeholder="Business Type">
              <option value="0" selected>Business Type</option>
              <option value="1">Restaurants</option>
              <option value="2">Gyms</option>
              <option value="3">Fashion / Clothing</option>
              <option value="4">Hair Care</option>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label for="business-form" class="search-words">Where are you located?</label>
            <select class="form-control" id="city-name" placeholder="City">
              <option value="0" selected disabled>City...</option>
              <option value="seattle">Seattle</option>
            </select>
          </div>
        </div>
        <div class="row submit">
          <button class="btn my-2 my-sm-0" id="submit" href="#" type="submit">
            Submit
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container b-card-sect mb-5 rounded d-flex algin-content-start col-md-10">
  {{#each business}}
  {{> businessCards }}
  {{/each}}
</div>
{{> scripts }}
<script type="text/javascript" src="js/index.js"></script>
{{> footer }}